<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox  fx:id="comandView"  stylesheets="@../css/popup.css" alignment="CENTER"  spacing="50.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amay.scu.controller.CommandController">
   <children >
      <GridPane >
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Device Information" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Device Name" GridPane.rowIndex="1" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Device IP" GridPane.rowIndex="2" />
            <Text fx:id="ip" strokeType="OUTSIDE" strokeWidth="0.0" text="IP" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Text fx:id="name" strokeType="OUTSIDE" strokeWidth="0.0" text="Device Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <GridPane alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Devicve Command" />
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="778.0" text="In Service" GridPane.rowIndex="1" />
            <Button contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="780.0" text="Out Of Service" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Operation Mode" />
            <TextArea fx:id="enteredCommand" prefHeight="38.0" prefWidth="348.0" GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <GridPane alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="apply" styleClass="apply" mnemonicParsing="false" onAction="#applyCommand" prefHeight="25.0" prefWidth="778.0" text="Apply" />
            <Button fx:id="cancel" contentDisplay="CENTER" mnemonicParsing="false" onAction="#cancelCommand" prefHeight="25.0" prefWidth="780.0" text="Cancel" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </children>
</VBox>
